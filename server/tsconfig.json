{
  "compilerOptions": {
    "target": "ES2020",                            
    "module": "NodeNext",                          
    "moduleResolution": "NodeNext",                
    "strict": true,                                
    "esModuleInterop": true,                       
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,                            
    "outDir": "./dist",                            // Directory for compiled JavaScript files
    "rootDir": "./src",                            // Root directory for TypeScript files
    "resolveJsonModule": true,                     // Allows importing JSON files
    "skipDefaultLibCheck": true ,
    "typeRoots": ["./node_modules/@types", "./src/types"], 
    "types": ["node"]                  
  },
  "include": ["src/**/*", "custom.d.ts"],            // Include TypeScript files in src folder and custom.d.ts
  "exclude": ["node_modules", "dist"]                        // Exclude node_modules
}
